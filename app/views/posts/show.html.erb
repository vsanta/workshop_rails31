
<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<h3>Comments</h3>
<div id="comments">
  <%= render :collection => @post.comments.all, :partial=> "posts/comments/comment" %>
</div>

<h3>Leave your comment</h3>
<%= render :partial=> "posts/comments/form" %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
